generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  summaries Summary[]
}

model Summary {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  client    Client   @relation(fields: [clientId], references: [id])
  clientId  String
}
